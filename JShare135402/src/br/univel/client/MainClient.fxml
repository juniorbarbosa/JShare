<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.univel.client.MainClientController">
	<stylesheets>
		<URL value="@/br/univel/styles/main.css" />
	</stylesheets>
	<BorderPane>
		<top>
			<VBox>
				<HBox alignment="CENTER_LEFT">
					<Label text="Nome: " />
					<TextField fx:id="nomeCliente" prefWidth="500" />
					<VBox.margin>
						<Insets left="5.0" right="5.0" top="5.0" />
					</VBox.margin>
				</HBox>
				<HBox alignment="CENTER_LEFT">
					<Label text="Ip do servidor: " />
					<TextField fx:id="ipServidor" prefWidth="200.0" />
					<Label text="Porta do servidor: ">
						<padding>
							<Insets left="5.0" />
						</padding>
					</Label>
					<TextField fx:id="portaServidor" prefWidth="100.0" />
					<Button text="Conectar">
						<HBox.margin>
							<Insets left="8.0" right="8.0" />
						</HBox.margin>
					</Button>
					<Button text="Desconectar">
						<HBox.margin>
							<Insets right="8.0" />
						</HBox.margin>
					</Button>
					<VBox.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</VBox.margin>
				</HBox>
			</VBox>
		</top>
		<center>
			<TableView fx:id="table" prefHeight="200.0" prefWidth="200.0">
				<columns>
					<TableColumn prefWidth="${table.width * 0.50}" text="Tamanho" />
					<TableColumn prefWidth="${table.width * 0.495}" text="Nome" />
				</columns>
				<BorderPane.margin>
					<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
				</BorderPane.margin>
			</TableView>
		</center>
		<bottom>
			<HBox alignment="CENTER">
				<Button onAction="#download" text="Download">
					<HBox.margin>
						<Insets bottom="5.0" left="5.0" right="5.0" />
					</HBox.margin>
				</Button>
			</HBox>
		</bottom>
	</BorderPane>
</StackPane>
